root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{*.js,*.json,*.toml,*.yml,*.yaml,*.proto,*.el}]
indent_size = 2

[{*.go,*.py,Makefile,makefile,*.mk}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
